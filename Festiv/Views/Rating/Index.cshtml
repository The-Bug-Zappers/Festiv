@using Festiv.Models;
@using Festiv.ViewModels;
@using Festiv.Controllers;
@using Festiv.Data;
@model List<User>;

@if (Model.Count == 0)
{
    <p>No guests yet!</p>
}
else
{
<h1>Select Guest</h1>
<div>
   <form id="Update" method="post">
        <label>Which guest are you rating?
            <select name="guest">
                <option value="">* Select One *</option>
                @foreach (var user in Model)
                {
                    <option value="@user.Id">@user.FirstName @user.LastName</option>
                }
            </select>
        <button type="submit">Choose Guest</button>
        </label>
   </form>
</div>
}


