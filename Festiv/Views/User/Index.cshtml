@using Festiv.Models;
@using Festiv.Controllers;
@using Festiv.Data;
@model List<User>;

<div>User Directory</div>
@if (Model.Count == 0)
{
    <p>No users yet!</p>
}
else
{
<div>
    <form action="User/GetProfile" method="post">
        <label>Whose profile do you want to see?
            <select name="guest">
                <option value="">* Select One *</option>
                @foreach (var user in Model)
                {
                    <option value="@user.Id">@user.FirstName @user.LastName</option>
                }
            </select> 
            <button type="submit">Choose Guest</button>
        </label>
    </form>
</div>
}