@using Microsoft.AspNetCore.Identity
@using Festiv.Models
@using Festiv.Data
@using Microsoft.EntityFrameworkCore
@model List<GuestRespond>
@inject UserManager<User> UserManager
@inject FestivDbContext DbContext

@{ 
    User user = await UserManager.GetUserAsync(User);
    var userPartyIds = Model.Where(gr => gr.UserId == user.Id).Select(gr => gr.PartyId).Distinct().ToList();
    var parties = await DbContext.Parties.ToListAsync(); // Fetch parties from the database
}

<h1>Guest List</h1>

@if (Model != null && Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Party Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var guest in Model)
                {
                    // Check if the guest is attending a party the user is also attending
                    @if (userPartyIds.Contains(guest.PartyId))
                    {
                        var party = parties.FirstOrDefault(p => p.Id == guest.PartyId);
                        var partyName = party?.Name ?? "Unknown";
                        <tr>
                            <td>@guest.FirstName</td>
                            <td>@guest.LastName</td>
                            <td>@guest.Email</td>
                            <td>@partyName</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <a asp-controller="Rsvp" asp-action="Index" class="btn btn-primary mt-3">Add more Guests</a>
}
else
{
    <p>No guests have responded yet.</p>
}