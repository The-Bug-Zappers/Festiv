@using Festiv.Models;
@model Party

@{
    ViewData["Title"] = "Delete Party";
}

<h1>Delete Party</h1>

<div>
    <h3>Are you sure you want to delete this party?</h3>
    <div>
        <h4>@Model.Name</h4>
        <p>@Model.Details.Description</p>
        <p>@Model.Details.Location</p>
        <p>@Model.Details.Start</p>
        <p>@Model.Details.End</p>
    </div>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>