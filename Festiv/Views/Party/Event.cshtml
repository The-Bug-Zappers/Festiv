@using Festiv.ViewModels
@model AddPartyViewModel

@{
    ViewData["Title"] = "Name of Event";
}

<div class="text-center">
    <h1 class="display-4">"Name of Event"</h1>
</div>

<div>
    <h2>Create Your Own Game</h2>
    <p>
        <a asp-action = "CreateGame" class = "btn btn-primary">Click Here</a>
    </p>
</div>

<div>
    @if(ViewBag.dummyContext.Count == 0)
    {
        <p>Got any games on your phone?</p>
    }
    else
    {
        <h3>Games</h3>
        <ul>
            @foreach (var game in Model.Games)
            {
                <li>
                    <a asp-action ="GameDetails" asp-route-partyid = "@Model.PartyId" asp-route-gameId ="@game.GameId">@game.GameName</a>
                </li>
            }
        </ul>
    }
</div>

