@using Festiv.Models
@model Festiv.ViewModels.GameDetailVviewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Game Details";
}

<h2>@Model.GameName</h2>

<h3>Let's play a game</h3>
<form asp-action = "SignUp" method = "post">
    <div class = "form-group">
        <label for = "NewPlayerName">Your Name</label>
        <input type = "text" class = "form-control" id ="NewPlayerName" name = "userName" />
        <input type = "hidden" name = "id" value ="@Model.GameId" />
    </div>
    <div class = "form-group">
        <button type = "submit" class = "btn btn-primary">Sign up</button>
    </div>
</form>

<table class = "table">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.WaitingPlayers)
        {
            <tr>
                <td>@player.Name</td>
            </tr>
        }
    </tbody>
</table>

<h3>Current Players and Teams</h3>

<div>
    <h4>Teams</h4>
    <form asp-action="RandomizeTeams" method="post">
        <input type="hidden" asp-for = "Id" />
        <button type = "submit" name="randomizerType" value="split">Split into 2 Teams</button>
        <button type = "submit" name="randomizerType" value="pairs">Group into Pairs</button>
    </form>

    <ul>
        @foreach (var team in Model.Teams)
        {
            <li>
                @foreach(var player in team)
                {
                    @player.FirstName <br />
                }
            </li>
        }
    </ul>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>