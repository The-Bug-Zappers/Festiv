@using Festiv.Models
@using Festiv.ViewModels
@model Festiv.ViewModels.AddGameViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Game";
}

<h1>Create New Game</h1>

<form asp-action = "CreateGame" asp-route-partyId = "@Model.PartyId" method = "post">
    <div class = "form-group">
        <label for = "GameName">Game Name</label>
        <input type = "text" class="form-control" id = "GameName" name = "GameName" required />
    </div>
    <div class="form-group">
        <label for="MinPlayers">Minimum Players</label>
        <input type = "number" class = "form-control" id = "MinPlayers" name = "MinPlayers" required />
    </div>
    <div class="form-group">
        <label for="MaxPlayers">Maximum Players</label>
        <input type = "number" class = "form-control" id = "MaxPlayers" name = "MaxPlayers" required />
    </div>
    <div class="form-group">
        <input type = "hidden" name ="PartyId" value = "@Model.PartyId" />
        <button type="submit" class="btn btn-primary">Create Game</button> 
    </div>
</form>

<div>
    <a asp-action="PartyDetails" asp-route-partyId="@Model.PartyId">Back to the party</a>
</div>

